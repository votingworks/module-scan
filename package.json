{
  "name": "module-scan",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "format": "prettier '**/*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)' --write",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,jsx,ts,tsx}' --quiet",
    "start": "ts-node --files ./src/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk $(which jest) --runInBand --no-cache",
    "test:watch": "jest --watch",
    "watch": "tsc -w"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc && lint-staged"
    }
  },
  "lint-staged": {
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write",
      "git add"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "eslint --quiet --fix",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "dependencies": {
    "@votingworks/ballot-encoder": "^1.2.0",
    "@votingworks/hmpb-interpreter": "^3.0.0",
    "@votingworks/qrdetect": "^1.0.1",
    "chokidar": "^3.4.0",
    "express": "^4.16.4",
    "fs-extra": "^8.0.1",
    "jpeg-js": "^0.4.0",
    "memory-streams": "^0.1.3",
    "node-quirc": "^2.1.0",
    "sqlite3": "^4.0.8",
    "tmp": "^0.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/fs-extra": "^8.1.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^12.0.0",
    "@types/sqlite3": "^3.1.6",
    "@types/supertest": "^2.0.9",
    "@types/tmp": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.10.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "sort-package-json": "^1.42.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.5.1",
    "ts-node": "^8.10.0",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": ">= 12"
  }
}